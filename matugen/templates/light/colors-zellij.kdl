themes {
    hypr {
        fg "{{ colors.primary.light.hex | set_lightness: 20.0 }}"
        bg "{{ colors.background.light.hex }}"
        black "{{ colors.background.light.hex | set_lightness: 20.0 }}"
        red "{{ colors.primary.light.hex | set_hue: 240.0 | set_lightness: -20.0 }}"
        orange "{{ colors.primary.light.hex | set_hue: 270.0 | set_lightness: -2.0 }}"
        yellow "{{ colors.primary.light.hex | set_hue: 300.0 | set_lightness: -20.0 }}"
        green "{{ colors.primary.light.hex | set_hue: 330.0 | set_lightness: -20.0 }}"
        blue "{{ colors.primary.light.hex | set_lightness: -20.0 }}"
        magenta "{{ colors.primary.light.hex | set_hue: 30.0 | set_lightness: -20.0 }}"
        cyan "{{ colors.primary.light.hex }}"
        white "{{ colors.on_background.light.hex }}"
    }
}

