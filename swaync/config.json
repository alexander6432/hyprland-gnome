{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "cssPriority": "user",
  "control-center-margin-top": 4,
  "control-center-margin-bottom": 4,
  "control-center-margin-right": 4,
  "control-center-margin-left": 4,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 2,
  "timeout-low": 1,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 300,
  "control-center-height": 500,
  "notification-window-width": 250,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 250,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "Sin Notificaciones",
  "script-fail-notify": true,
  "scripts": {
    "volume-sound": {
      "exec": "paplay ~/.config/swaync/sources/pixel.mp3",
      "urgency": "Low",
      "app-name": "Volumen"
    },
    "not-sound": {
      "exec": "echo 'Procurar que general-sound este al final para que se aplique a todas las apps'",
      "urgency": "Low",
      "app-name": "^(Brillo|Gamma|Hyprsunset|Multimedia)$"
    },
    "general-sound-low": {
      "exec": "paplay --volume=30000 ~/.config/swaync/sources/bmw_chime.mp3",
      "urgency": "Low"
    },
    "general-sound-normal": {
      "exec": "paplay --volume=40000 ~/.config/swaync/sources/cartoon_network_song.mp3",
      "urgency": "Normal"
    },
    "general-sound-critical": {
      "exec": "paplay ~/.config/swaync/sources/among_us.mp3",
      "urgency": "Critical"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "inhibitors",
    "title",
    "dnd",
    "mpris",
    "notifications",
    "volume",
    "backlight",
    "menubar"
  ],
  "widget-config": {
    "notifications": {
      "vexpand": true
    },
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "text": "Notificaciones",
      "clear-all-button": true,
      "button-text": "󰆴  LImpiar"
    },
    "dnd": {
      "text": "No Molestar"
    },
    "label": {
      "max-lines": 3,
      "text": "Label Text"
    },
    "mpris": {
      "blacklist": [],
      "autohide": true,
      "show-album-art": "when-available",
      "loop-carousel": true
    },
    "volume": {
      "label": "󰕾 "
    },
    "backlight": {
      "label": "󰃟 "
    },
    "menubar": {
      "menu#power": {
        "label": " Power",
        "position": "left",
        "actions": [
          {
            "label": "󰍁 Bloquear",
            "command": "swaync-client -cp && hyprlock -c ~/.config/hypr/hyprlock/hyprlock.conf"
          },
          {
            "label": "󰗼 Cerrar Sesión",
            "command": "swaync-client -cp && hyprctl dispatch exit"
          },
          {
            "label": "󰤄 Suspender",
            "command": "swaync-client -cp && systemctl suspend"
          },
          {
            "label": "󰜉 Reiniciar",
            "command": "swaync-client -cp && systemctl reboot"
          },
          {
            "label": " Apagar",
            "command": "swaync-client -cp && systemctl poweroff"
          }
        ]
      },
      "menu#capturas": {
        "label": " Capturas",
        "position": "right",
        "actions": [
          {
            "label": " Ventana Completa",
            "command": "swaync-client -cp && hyprshot -m window -o ~/Imágenes/'Capturas de pantalla' -f Captura_de_Ventana_$(date +%F_%H-%M-%S).png"
          },
          {
            "label": "󰹑 Pantalla Completa",
            "command": "swaync-client -cp && hyprshot -m output -o ~/Imágenes/'Capturas de pantalla' -f Captura_de_Pantalla_$(date +%F_%H-%M-%S).png"
          },
          {
            "label": " Captura de Región",
            "command": "swaync-client -cp && hyprshot -m region -o ~/Imágenes/'Capturas de pantalla' -f Captura_de_Región_$(date +%F_%H-%M-%S).png"
          }
        ]
      },
      "menu#control": {
        "label": " Controles",
        "position": "left",
        "actions": [
          {
            "label": "󰝟 Silenciar",
            "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q MUTED",
            "type": "toggle"
          },
          {
            "label": "󰍭 Silenciar",
            "command": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && wpctl get-volume @DEFAULT_AUDIO_SOURCE@ | grep -q MUTED",
            "type": "toggle"
          },
          {
            "label": "  Gestor de Redes",
            "command": "swaync-client -cp && nm-connection-editor"
          },
          {
            "label": " Gestor de Bluetooth",
            "command": "swaync-client -cp && blueman-manager"
          },
          {
            "label": "? Explorador de Atajos",
            "command": "swaync-client -cp && wezterm start --class='hypr-atajos' -- ~/.config/scripts/atajos.sh"
          }
        ]
      }
    },
    "buttons-grid": {
      "buttons-per-row": 7,
      "actions": [
        {
          "label": "󰝟",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q MUTED",
          "type": "toggle"
        },
        {
          "label": " ",
          "command": "swaync-client -cp && nm-connection-editor"
        }
      ]
    }
  }
}
